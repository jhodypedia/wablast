<% layout('layout') %>

<h3 class="mb-3"><%= form.id ? 'Edit User' : 'Tambah User' %></h3>

<div class="card reveal">
  <div class="card-body">
    <form method="post">
      <div class="row g-3">
        <div class="col-md-4">
          <label>Username</label>
          <input type="text" class="form-control" name="username" value="<%= form.username || '' %>" <%= form.id ? 'readonly' : '' %> required>
        </div>
        <div class="col-md-4">
          <label>Fullname</label>
          <input type="text" class="form-control" name="fullname" value="<%= form.fullname || '' %>" required>
        </div>
        <div class="col-md-4">
          <label>Email</label>
          <input type="email" class="form-control" name="email" value="<%= form.email || '' %>" required>
        </div>
        <div class="col-md-4">
          <label>Role</label>
          <select class="form-select" name="role">
            <option value="member" <%= form.role==='member' ? 'selected' : '' %>>Member</option>
            <option value="admin" <%= form.role==='admin' ? 'selected' : '' %>>Admin</option>
          </select>
        </div>
        <div class="col-md-4">
          <label>Password <small class="text-muted"><%= form.id ? '(kosongkan jika tidak ganti)' : '' %></small></label>
          <input type="password" class="form-control" name="password" <%= form.id ? '' : 'required' %>>
        </div>
      </div>
      <div class="mt-3 d-flex gap-2">
        <button class="btn btn-success" type="submit">Simpan</button>
        <a href="/admin/users" class="btn btn-secondary">Kembali</a>
      </div>
    </form>
  </div>
</div>
